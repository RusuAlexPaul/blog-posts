<!-- Here is start the code for showing the posts from Admin Panel -->

<section class="fdb-block" id="posts">
  <div class="container">
    <% @posts.each do |post|%>
      <div class="card mb-4">
        <div class="card-header">
          <%= post.title%>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%= post.body  %></p>
            <footer class="blockquote-footer"> <cite title="Source Title"><%= post.published_at %></cite></footer>
          </blockquote>
        </div>
      </div>
    <% end %>
  </div>
</section>

